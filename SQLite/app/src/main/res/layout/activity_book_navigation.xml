<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".BookNavigationActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Navigation Page"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textColor="#6207CA"
        android:textStyle="bold"
        android:textSize="20sp" />
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="Book ID:"
            android:textSize="16dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBookId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9C27B0" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Book Name:"
            android:textSize="16dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBookName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C27B0" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Book Price:"
            android:textSize="16dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBookPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C27B0" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:text="# of Page:"
            android:textSize="16dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBookPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9C27B0" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Book Descrition"
            android:textSize="16dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBookDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#673AB7" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First"
            android:id="@+id/btnBookFirst"/>
        <Button
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:id="@+id/btnBookPrevious"/>
        <Button
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/btnBookNext"/>
        <Button
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last"
            android:id="@+id/btnBookLast"/>

    </LinearLayout>

</LinearLayout>